{
  "name": "@eldrforge/tree-core",
  "version": "0.1.5",
  "description": "Dependency graph algorithms for monorepo package analysis",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "clean": "rm -rf dist coverage",
    "precommit": "npm run clean && npm run build && npm run lint && npm run test",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "dependency-graph",
    "monorepo",
    "package-analysis",
    "topological-sort",
    "dependency-resolution"
  ],
  "author": "Tim O'Brien <tobrien@discursive.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grunnverk/tree-core.git"
  },
  "bugs": {
    "url": "https://github.com/grunnverk/tree-core/issues"
  },
  "homepage": "https://github.com/grunnverk/tree-core#readme",
  "dependencies": {
    "@eldrforge/git-tools": "^0.1.16",
    "@eldrforge/shared": "^0.1.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.33.0",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.17.0",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.3.0",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
